<%#
name: Service Action - SSH Default
snippet: false
template_inputs:
- name: service
  required: true
  input_type: user
  description: Name of the service
  advanced: false
  value_type: plain
- name: action
  required: true
  input_type: user
  description: Action to perform on the service
  options: |-
    restart
    start
    stop
    status
    reload
    enable
    disable
  advanced: false
  value_type: plain
model: JobTemplate
job_category: Services
description_format: "%{action} service %{service}"
provider_type: SSH
kind: job_template
organizations:
- Default Organization
- OrdinaryOrg
- OrgA
- OrgB
- OrgC
- OrgD
- OrgE
- OrgP
- OrgQ
- tax
- very very very very very very very very very very very very very very very very
  very very very very long name
locations:
- BRQ
- Default Location
- LocA
- LocA/LocAA
- LocA/LocAA/LocAAA
- LocB
- LocP
- LocQ
%>

<% if @host.operatingsystem.family == "Redhat" && @host.operatingsystem.major.to_i > 6 %>
systemctl <%= input("action") %> <%= input("service") %>
<% else %>
  <% case input("action")
  when 'enable' %>
chkconfig --add <%= input("service") %>
  <% when 'disable' %>
chkconfig --del <%= input("service") %>
  <% else %>
service <%= input("service") %> <%= input("action") %>
  <% end %>
<% end -%>