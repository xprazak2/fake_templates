<%#
name: Power Action - Ansible Default
snippet: false
template_inputs:
- name: action
  required: true
  input_type: user
  description: Action to perform on the service
  options: "restart\r\nshutdown"
  advanced: false
  value_type: plain
model: JobTemplate
job_category: Ansible Power
description_format: "%{action} host"
provider_type: Ansible
kind: job_template
organizations:
- Default Organization
- OrdinaryOrg
- OrgA
- OrgB
- OrgC
- OrgD
- OrgE
- OrgP
- OrgQ
- tax
- very very very very very very very very very very very very very very very very
  very very very very long name
locations:
- BRQ
- Default Location
- LocA
- LocA/LocAA
- LocA/LocAA/LocAAA
- LocB
- LocP
- LocQ
%>

---
- hosts: all
  tasks:
    - command: |
        echo <%= input('action') %> host && sleep 3
        <%= case input('action')
          when 'restart'
            'shutdown -r +1'
          else
            'shutdown -h +1'
          end %>